<%- include("../../../views/admin/header"); %>



<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                <li class="breadcrumb-item active"><a href="/admin/dashboard">Home</a></li>
            </ol>
        </div>
    </div>
    <!-- row -->

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="email-left-box"><a href="/newEmail" class="btn btn-primary btn-block">Nouveau Message</a>
                            <div class="mail-list mt-4"><a href="/messagesnonlus" class="list-group-item border-0 text-primary p-r-0"><i class="fa fa-inbox font-18 align-middle mr-2"></i> Messages Non Lus <span class="badge badge-primary badge-sm float-right m-t-5"><%= nbreNoRead %></span> </a>
                                <a href="/messageslus" class="list-group-item border-0 p-r-0"><i class="fa fa-paper-plane font-18 align-middle mr-2"></i><b>Messages Lus</b> </a> 
                                <a href="/messageEnvoyes" class="list-group-item border-0 p-r-0"><i class="mdi mdi-file-document-box font-18 align-middle mr-2"></i>Messages EnvoyÃ©s</a>
                            </div>

                          
                        </div>
                        

                            
                            <% if(message){ %>
                                <% if(message.type === 'success'){ %>
                                <div class="alert alert-success">
                                    <strong><%= message.intro %> </strong><span><%= message.message %></span>
                                  </div>
                                  <% } else if(message.type === 'deleted'){ %>
                                    <div class="alert alert-danger">
                                       <strong><%= message.intro %> </strong><span><%= message.message %></span>
                                      </div>
                                  <% }} %>


                                  <div class="email-right-box">
                                    <h2><b>Messages Lus</b></h2>
                                    <div class="email-list m-t-15">
                                       
                                        <% if(data2.length >0){ %>
                                        <% data2.forEach(function (msg){ %>
                                        <div class="message unread">
                                            <a href="/readcontactmessage/<%= msg.id %>">
                                                <div class="col-mail col-mail-1">
                                                    <div class="email-checkbox">
                                                        <input type="checkbox" id="chk20">
                                                        <label class="toggle" for="chk20"></label>
                                                    </div>
                                                </div>
                                                <div class="col-mail col-mail-2">
                                                    <div class="subject"><%= unescape(msg.subject) %></div>
                                                    <div class="date"><%=  moment(msg.created_at).format('HH:MM') %></div>
                                                </div>
                                            </a>
                                        </div>
                                        <% }) %>
                                        <% } %>

                                        <% data.forEach(function (msg){ %>
                                        <div class="message">
                                            <a href="/readEmail/<%= msg.id_msg %>">
                                                <div class="col-mail col-mail-1">
                                                    <div class="email-checkbox">
                                                        <input type="checkbox" id="chk21">
                                                        <label class="toggle" for="chk21"></label>
                                                    </div>
                                                </div>
                                                <div class="col-mail col-mail-2">
                                                    <div class="subject"><%= unescape(msg.subject) %></div>
                                                    <div class="date"><%=  moment(msg.sended_date).format('HH:MM') %></div>
                                                </div>
                                            </a>
                                        </div>
                                        <% }) %>

                                    </div>
                                    <!-- panel -->
                                    <!--div class="row">
                                        <div class="col-7">
                                            <div class="text-left">1 - 20 of 568</div>
                                        </div>
                                        <div class="col-5">
                                            <div class="btn-group float-right">
                                                <button class="btn btn-gradient" type="button"><i class="fa fa-angle-left"></i>
                                                </button>
                                                <button class="btn btn-dark" type="button"><i class="fa fa-angle-right"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div-->
                                </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>

<%- include("../../../views/admin/footer"); %>
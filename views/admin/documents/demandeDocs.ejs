<%- include("../../../views/admin/header"); %>

<div class="row page-titles mx-0">
  <div class="col p-md-0">
      <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
          <li class="breadcrumb-item active"><a href="/admin/dashboard">Home</a></li>
      </ol>
  </div>
</div>


<div class="content-body">

    <div class="container-fluid mt-3">
        <div class="row">

            
      <div class="col-lg-12 col-xl-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                    <div class="pull-left col-md-12">
                        <h3>Demande de document</h3>
                    </div>

                    
                    <% if(message){ %>
                      <% if(message.type === 'success'){ %>
                      <div class="alert alert-success">
                          <strong><%= message.intro %> </strong><span><%= message.message %></span>
                        </div>
                        <% } else if(message.type === 'deleted'){ %>
                          <div class="alert alert-danger">
                             <strong><%= message.intro %> </strong><span><%= message.message %></span>
                            </div>
                        <% }} %>

                    <div class="row">
                      <div class="col-lg-12">
                          <div class="card bg-light mb-3">
                              <div class="card-header"><h4>selectionner un document à demander</h4> </div>
                              <div class="card-body">

                                
                     
                         <form action="/user/sendDemande" method="POST" >
                            <div class="form-row">

                                <div class="form-group col-md-12">
                                    <label for=""><b>Liste des documents disponible à demander</b></label>
                                    <select id="inputDocs" name="docs" class="form-control">
                                        <% data.forEach(function(docs){ %>
                                        <option><%= docs.nomdoc %></option>
                                        <% }) %>
                                      </select>
                                  </div>

                            

                                  <input type="hidden" name="first" value="1">

                                  

                                    <div class="form-group col-md-12">
                                      <div class="col-md-6 offset-md-4">
                                          <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-check-circle-o" >
                                              Valider
                                            </i>
                                          </button>
                                          <a href="/admin/dashboard" class="btn btn-danger"><i class="fa fa-ban" > Home</i></a>
                                      </div>  </div>
                                

                            </div>
                            </form>
                     
                    </div></div></div></div>

                    </div>

                    </div>
    </div>
    </div></div> </div></div>
    </div> 
    </div>      

<%- include("../../../views/admin/footer"); %>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    
     <% if(title){ %>
    <title><%= title %></title>
    <% } %>

    
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="100x100" href="/static/admin/images/Logo/logo_favicon.jpg">
    <!-- Pignose Calender -->
    <link href="/static/admin/plugins/pg-calendar/css/pignose.calendar.min.css" rel="stylesheet">
    <!-- Chartist -->
    <link rel="stylesheet" href="/static/admin/plugins/chartist/css/chartist.min.css">
    <link rel="stylesheet" href="/static/admin/plugins/chartist-plugin-tooltips/css/chartist-plugin-tooltip.css">
    <!-- Custom Stylesheet -->
    <link href="/static/admin/css/style.css" rel="stylesheet">

</head>

<body>

    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>
    <!--*******************
        Preloader end
    ********************-->

    
    <!--**********************************
        Main wrapper start
    ***********************************-->
    <div id="main-wrapper">

        <!--**********************************
            Nav header start
        ***********************************-->
        <div class="nav-header" style="background-color: white;">
            <div class="brand-logo" style="padding-top: 0; margin-top: 0; border-top: 0;">
                <a href="/admin/dashboard">
                    <b  ><center><img src="/static/admin/images/Logo/logo_transparent.png" alt=""  width="140px" height="110"></center> </b>
                   
                </a>
            </div>
        </div>
        <!--**********************************
            Nav header end
        ***********************************-->

        <!--**********************************
            Header start
        ***********************************-->
        <div class="header">    
            <div class="header-content clearfix">
                
                <div class="nav-control">
                    <div class="hamburger">
                        <span class="toggle-icon"><i class="icon-menu"></i></span>
                    </div>
                </div>
                <div class="header-left">
                    <div class="input-group icons">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-transparent border-0 pr-2 pr-sm-3" id="basic-addon1"><i class="mdi mdi-magnify"></i></span>
                        </div>
                        <form action="/user/searchResult" method="GET">
                        <input type="search" class="form-control" placeholder="Search Dashboard" name="search" aria-label="Search Dashboard">
                    </form>
                        
                    </div>
                </div>
                <div class="header-right">
                    <ul class="clearfix">
                        <% if(profile_id!==7){ %>
                        <li class="icons dropdown"><a href="javascript:void(0)" data-toggle="dropdown">
                                <i class="mdi mdi-email-outline"></i>
                                <% if(nbreNoRead>0){ %>
                                <span class="badge badge-pill gradient-1"><%= nbreNoRead %></span>
                                <% } %>
                                
                            </a>
                            <div class="drop-down animated fadeIn dropdown-menu">
                                <div class="dropdown-content-heading d-flex justify-content-between">
                                    <% if(nbreNoRead>0){ %>
                                        <span class=""><%= nbreNoRead %> Nouveaux Messages</span>  
                                        <% } else{ %>
                                            <span class="">0 Nouveaux Messages</span>
                                            <% } %>
                                    <a href="javascript:void()" class="d-inline-block">
                                        <% if(nbreNoRead>0){ %>
                                        <span class="badge badge-pill gradient-1"><%= nbreNoRead %></span>
                                        <% } %>
                                    </a>
                                </div>
                                <div class="dropdown-content-body" >
                                    
                                    <ul>
                                       <% if(contacts !== null){ %>
                                        <% contacts.forEach(function (msg) { %>
                                            
                                            <% if(msg.read_at !== null){ %>
                                        <li class="border bg-light">
                                            <a href="/readcontactmessage/<%= msg.id %>">
                                                <!--img class="float-left mr-3 avatar-img" src="/static/admin/images/avatar/1.jpg" alt=""-->
                                                <div class="notification-content">
                                                    <div class="notification-heading"><%= msg.nom %></div>
                                                    <div class="notification-timestamp"><%=  moment(msg.created_at).format('DD-MM-YYYY') %> <br>  <%= moment(msg.created_at).format('HH:MM') %></div>
                                                    
                                                    <div class="notification-text"><%= unescape(msg.subject) %></div>
                                                </div>
                                            </a>
                                        </li>
                                        <%} else{%>

                                        <li class="border bg-white">
                                            <a href="/readcontactmessage/<%= msg.id %>">
                                                <!--img class="float-left mr-3 avatar-img" src="/static/admin/images/avatar/1.jpg" alt=""-->
                                                <div class="notification-content">
                                                    <div class="notification-heading"><%= msg.nom %></div>
                                                    <div class="notification-timestamp"><%=  moment(msg.created_at).format('DD-MM-YYYY') %> <br>  <%= moment(msg.created_at).format('HH:MM') %></div>
                                                    
                                                    <div class="notification-text"><%= unescape(msg.subject) %></div>
                                                </div>
                                            </a>
                                        </li>
                                        <% } %>
                                    
                                        <%})  %> 
                                   
                                        <% } %>
                                   
                                    
                                    
                                        
                                          
                                            <% messages.forEach(function (msg) { %>
                                                
                                                <% if(msg.read_at !== null){ %>
                                            <li class="border bg-light">
                                                <a href="/readEmail/<%= msg.id_msg %>">
                                                    <!--img class="float-left mr-3 avatar-img" src="/static/admin/images/avatar/1.jpg" alt=""-->
                                                    <div class="notification-content">
                                                        <div class="notification-heading"></div>
                                                        <div class="notification-timestamp"><%=  moment(msg.sended_date).format('DD-MM-YYYY') %> <br>  <%= moment(msg.sended_date).format('HH:MM') %></div>
                                                        
                                                        <div class="notification-text"><%= unescape(msg.subject) %></div>
                                                    </div>
                                                </a>
                                            </li>
                                            <%} else{%>
    
                                            <li class="border bg-white">
                                                <a href="/readEmail/<%= msg.id %>">
                                                    <!--img class="float-left mr-3 avatar-img" src="/static/admin/images/avatar/1.jpg" alt=""-->
                                                    <div class="notification-content">
                                                        <div class="notification-heading"></div>
                                                        <div class="notification-timestamp"><%=  moment(msg.sended_date).format('DD-MM-YYYY') %> <br>  <%= moment(msg.sended_date).format('HH:MM') %></div>
                                                        
                                                        <div class="notification-text"><%= unescape(msg.subject) %></div>
                                                    </div>
                                                </a>
                                            </li>
                                            <% } %>
                                        
                                            <%})  %> 
                                       
                                            
                                    </ul> 
                                       
                                    
                                </div>
                            </div>
                        </li>
                        <% } %>
                        <li class="icons dropdown"><a href="javascript:void(0)" data-toggle="dropdown">
                                <i class="mdi mdi-bell-outline"></i>
                            
                                <% if(notReadNotifs.length>0){ %>
                                    <span class="badge badge-pill gradient-2"><%= notReadNotifs.length %></span>
                                <% } %>
                            </a>
                            <div class="drop-down animated fadeIn dropdown-menu dropdown-notfication">
                                <div class="dropdown-content-heading d-flex justify-content-between">
                                    <span class=""> Notifications</span>  
                                    <a href="javascript:void()" class="d-inline-block">
                                        <% if(notReadNotifs.length>0){ %>
                                        <span class="badge badge-pill gradient-2"><%= notReadNotifs.length %></span>
                                        <% } %>
                                    </a>
                                </div>
                                <div class="dropdown-content-body">
                                    <ul>
                                       <% notifs.forEach(function (notif) { %>

                                        <% if(notif.readatNotifier!==null){ %>
                                        <li  class="border bg-light"> 
                                            <a href="/user/notifDtails/<%= notif.id_notif %>">
                                                <!--span class="mr-3 avatar-icon bg-success-lighten-2"><i class="icon-present"></i></span-->
                                                <div class="notification-content">
                                                    <h6 class="notification-heading">Demande informations: <%= notif.data %></h6>
                                                    <span class="notification-text"><%=  moment(notif.created_at).format('DD-MM-YYYY') %> <br>  <%= moment(notif.created_at).format('HH:MM') %></span> 
                                                </div>
                                            </a>
                                        </li>

                                            <% }else{%>
                                                <li class="border bg-white">
                                                <a href="/user/notifDtails/<%= notif.id_notif %>" >
                                                    <!--span class="mr-3 avatar-icon bg-success-lighten-2"><i class="icon-present"></i></span-->
                                                    <div class="notification-content">
                                                        <h6 class="notification-heading">Demande informations: <%= notif.data %></h6>
                                                        <span class="notification-text"><%=  moment(notif.created_at).format('DD-MM-YYYY') %> <br>  <%= moment(notif.created_at).format('HH:MM') %></span> 
                                                    </div>
                                                </a>

                                            </li>
                                            <% } %>
                                        
                                        <% }) %>
                                    </ul>
                                    
                                </div>
                            </div>
                        </li>
                        <li class="icons dropdown d-none d-md-flex">
                            <a href="/userProfile" >
                                <span><b><%= username %></b></span>  
                            </a>
                            
                        </li>
                        <li class="icons dropdown">
                            <div class="user-img c-pointer position-relative"   data-toggle="dropdown">
                                <span class="activity active"></span>
                                <img src="/static/admin/user-images/<%= photo %>" height="40" width="40" alt="">
                            </div>
                            <div class="drop-down dropdown-profile animated fadeIn dropdown-menu">
                                <div class="dropdown-content-body">
                                    <ul>
                                        <li>
                                            <a href="/userProfile"><i class="icon-user"></i> <span>Profil</span></a>
                                        </li>
                                        <!--li>
                                            <a href="javascript:void()">
                                                <i class="icon-envelope-open"></i> <span>Messages</span> <div class="badge gradient-3 badge-pill gradient-1">3</div>
                                            </a>
                                        </li-->
                                        
                                        <hr class="my-2">
                                        
                                        <li><a href="/logout"><i class="icon-key"></i> <span>Logout</span></a></li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!--**********************************
            Header end ti-comment-alt
        ***********************************-->

        <!--**********************************
            Sidebar start
        ***********************************-->
        <div class="nk-sidebar">           
            <div class="nk-nav-scroll">
                <ul class="metismenu" id="menu">
                    <li class="nav-label"><b>Dashboard</b> </li>
                    <li>
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-speedometer menu-icon"></i><span class="nav-text">Dashboard</span>
                        </a>
                        <ul aria-expanded="false">
                            <li><a href="/admin/dashboard">Home</a></li>
                            <li><a href="/acceuil">Acceuil</a></li>
                        </ul>
                    </li>
                    
                    <% if(profile_id===5){ %>
                    <li class="nav-label"> <b>Gestion</b></li>
                    <li>
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-note menu-icon"></i><span class="nav-text">Opérations</span>
                        </a>
                        <ul aria-expanded="false">
                            <li><a href="/opList">Liste des opérations</a></li>
                            <% if(profile === "admin") { %>
                            <li><a href="/opList/create">nouvelle opération</a></li>
                            <% } %>
                        </ul>
                    </li>
                    <li>
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-note menu-icon"></i><span class="nav-text">Profils</span>
                        </a>
                        <ul aria-expanded="false">
                            <li><a href="/profileList">Liste des profils</a></li>
                            <li><a href="/profileList/create">Nouveau profil</a></li>
                        </ul>
                    </li>
                    <li>
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-people menu-icon"></i><span class="nav-text">Utilisateurs</span>
                        </a>
                        <ul aria-expanded="false">
                            <li><a href="/usersList">Liste des utilisateurs</a></li>
                            <li><a href="/usersList/create">Nouveau utilisateur</a></li>
                        </ul>
                    </li>

                    <li>
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-pencil menu-icon"></i><span class="nav-text">Gérer Documents</span>
                        </a>
                        <ul aria-expanded="false">
                            <li><a href="/admin/ListeCycle">Les cycles de type de document</a></li>
                            <li><a href="/admin/createdocycle">Nouveau cycle de type document</a></li>
                        </ul>
                    </li>

                    <% } %>
                    <li class="nav-label"> <b>Notification</b></li>
                    
                    <li>
                        <a href="/user/demandeDocs">
                            <i class="icon-note menu-icon"></i><span class="nav-text">Effectuer une demande</span>
                        </a>
                       
                    </li>

                    <li>
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-docs menu-icon"></i><span class="nav-text">Documents</span>
                        </a>
                        <ul aria-expanded="false">
                            <li><a href="/user/doclist">Mes Documents</a></li>
                            <% if(profile_id===5 || profile_id===7){ %>
                            <li><a href="/user/archivedocs">Documents achievés</a></li>
                            <%}%>
                        </ul>
                    </li>

                    <li>
                        <a href="/user/notification">
                            <i class="icon-bell menu-icon"></i> <span class="nav-text">Notifications</span>
                        </a>
                        
                    </li>
                    <% if(profile_id!==7){ %>
                    <li>
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-envelope menu-icon"></i> <span class="nav-text">Messages</span>
                        </a>
                        <ul aria-expanded="false">
                            <li><a href="/messagesnonlus">Messages non lus</a></li>
                            <li><a href="/messageslus">Messages lus</a></li>
                            <li><a href="/newEmail">Nouveau</a></li>
                        </ul>
                    </li>
                    <% } %>
                    
                    
                    
                    
            </div>
        </div>
        <!--**********************************
            Sidebar end
        ***********************************-->
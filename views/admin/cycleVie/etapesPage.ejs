<%- include("../../../views/admin/header"); %>

<div class="content-body">

    <div class="container-fluid mt-3">
        <div class="row">

            
      <div class="col-lg-12 col-xl-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                    <div class="pull-left col-md-12">
                        <h3></h3>
                    </div>

                    <div class="row">
                      <div class="col-lg-12">
                          <div class="card bg-light mb-3">
                              <div class="card-header"><h4>Veuillez renseigner les champs</h4> </div>
                              <div class="card-body">

                                <% if(message){ %>
                                  <div class="alert alert-warning"><%= message %></div>
                                <% } %>
                          <% if(updat===0) { %>
                         <form action="/admin/storesteps" method="POST">
                            <div class="form-row">

                                

                                <div class="form-group col-md-6" style="font-size: 15px">
                                    <label for="">Numéro étape: <span><b><%= numstep %></b></span> </label>
                                    
                                  </div>

                            
                                  <div class="form-group col-md-4">
                                    <label for="inputProfile">Profile</label>
                                    <select id="inputProfile" name="profile" class="form-control">
                                      <% data.forEach(function(profile){ %>
                                      <option><%= profile.nom %></option>
                                      <% }) %>
                                    </select>
                                  </div>


                                     <input type="hidden" name="docId" value="<%= id_doc %>">
                                     <input type="hidden" name="nbreSteps" value="<%= nbreSteps %>">
                                     <input type="hidden" name="numstep" value="<%= numstep %>">
                                    
                
                                    <div class="form-group col-md-12">
                                      <div class="col-md-6 offset-md-4">
                                          <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-check-circle-o" >
                                              Suivant
                                            </i>
                                          </button>
                                          <a href="/admin/previewStep/<%= preID %>" class="btn btn-danger"><i class="fa fa-ban" > Retour</i></a>
                                      </div>  </div>
                                

                            </div>
                            </form>

                            <% } else if(updat===1){ %>

                            <form action="/admin/updateStep/<%= idetape %>?_method=PUT " method="POST">
                              <div class="form-row">
  
                                  
  
                                  <div class="form-group col-md-6" style="font-size: 15px">
                                      <label for="">Numéro étape: <span><b><%= numstep %></b></span> </label>
                                      
                                    </div>
  
                              
                                    <div class="form-group col-md-4">
                                      <label for="inputProfile">Profile</label>
                                      <select id="inputProfile" name="profile" class="form-control">
                                        <% data.forEach(function(profile){ %>
                                        <option><%= profile.nom %></option>
                                        <% }) %>
                                      </select>
                                    </div>
  
  
                                       <input type="hidden" name="docId" value="<%= id_doc %>">
                                       <input type="hidden" name="nbreSteps" value="<%= nbreSteps %>">
                                       <input type="hidden" name="numstep" value="<%= numstep %>">
                                      
                  
                                      <div class="form-group col-md-12">
                                        <div class="col-md-6 offset-md-4">
                                            <button type="submit" class="btn btn-primary">
                                              <i class="fa fa-check-circle-o" >
                                                Suivant
                                              </i>
                                            </button>
                                            <a href="/admin/previewStep/<%= preID %>" class="btn btn-danger"><i class="fa fa-ban" > Retour</i></a>
                                        </div>  </div>
                                  
  
                              </div>
                              </form>
                     <% } %>
                    </div></div></div></div>

                    </div>

                    </div>
    </div>
    </div></div> </div></div>
    </div> 
    </div>      

